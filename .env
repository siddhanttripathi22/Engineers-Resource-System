# 🌍 Environment
NODE_ENV=development

# 📦 MongoDB (used by Docker service, if local Mongo)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
MONGO_DATABASE=erm_db

# 🔴 Redis
REDIS_PASSWORD=redis123

# 🔐 JWT Config
JWT_SECRET=super-secret-key-1234567890

# 🔁 CORS
# ✅ IMPORTANT: Use the actual frontend port (Vite dev = 5173, not 3000)
CORS_ORIGIN=http://localhost:5173

# 🌐 Backend URL for internal use (optional)
API_BASE_URL=http://localhost:5000

# 💻 Frontend: API endpoint used inside React (Vite)
VITE_API_BASE_URL=http://localhost:5000/api

# 🏷️ App name (can be used in UI, title bar, etc.)
VITE_APP_NAME=Engineering Resource Management
